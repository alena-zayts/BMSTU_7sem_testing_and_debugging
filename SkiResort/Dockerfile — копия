#COPY <src-path> <destination-path>FROM microsoft/dotnet:2.1-aspnetcore-runtime AS baseWORKDIR /appEXPOSE 80FROM microsoft/dotnet:2.1-sdk AS buildWORKDIR /srcCOPY SkiResort.sln.sln .COPY BL/BL.csproj BL/COPY BL.Test/BL.Test.csproj BL.Test/#COPY BL/BL.csproj BL/#COPY BL.Test/BL.Test.csproj BL.Test/RUN dotnet restoreCOPY . .WORKDIR /src/BLRUN dotnet build --no-restore -c Release -o /appFROM build as testWORKDIR /src/BL.Test#RUN dotnet testFROM build AS publishWORKDIR /src/BLRUN dotnet publish --no-build -c Release -o /appFROM base AS finalWORKDIR /appCOPY --from=publish /app .ENTRYPOINT ["dotnet", "BL.dll"]